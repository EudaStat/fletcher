{
  "name": "fletcher",
  "displayName": "fletcher",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.83.0"
  },
  "publisher": "EudaStat",
  "repository": "https://github.com/EudaStat/fletcher",
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "REditorSupport.r"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "R",
        "extensions": [
          ".R",
          ".r",
          ".Rmd",
          ".rmd",
          ".qmd"
        ]
      }
    ],
    "definitionProviders": [
      {
        "language": "R",
        "scheme": "file"
      }
    ],
    "commands": [
      {
        "command": "fletcher.findTargetDefinition",
        "title": "Find R Target Definition"
      }
    ],
    "keybindings": [
      {
        "key": "alt+m",
        "command": "r.runCommandWithSelectionOrWord",
        "args": "targets::tar_make($$)",
        "when": "editorTextFocus && ( editorLangId == 'r' || editorLangId == 'markdown' )"
      },
      {
        "key": "alt+l",
        "command": "r.runCommandWithSelectionOrWord",
        "args": "targets::tar_load($$)",
        "when": "editorTextFocus && ( editorLangId == 'r' || editorLangId == 'markdown' )"
      },
      {
        "key": "alt+i",
        "command": "r.runCommandWithSelectionOrWord",
        "args": "targets::tar_invalidate($$)",
        "when": "editorTextFocus && ( editorLangId == 'r' || editorLangId == 'markdown' )"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.4"
  }
}
